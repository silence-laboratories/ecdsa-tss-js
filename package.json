{
  "name": "ecdsa-tss",
  "version": "1.0.0",
  "description": "ECDSA TSS(2,2) library",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc && tsc -p ./tsconfig-cjs.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/com.silencelaboratories/ecdsa-tss-js.git"
  },
  "keywords": [
    "SilenceLaboratories",
    "TSS(2,2)",
    "ECDSA"
  ],
  "author": "SilenceLaboratories",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/com.silencelaboratories/ecdsa-tss-js/issues"
  },
  "homepage": "https://gitlab.com/com.silencelaboratories/ecdsa-tss-js#readme",
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@noble/secp256k1": "^1.6.3",
    "paillier-bigint": "^3.4.0"
  }
}
