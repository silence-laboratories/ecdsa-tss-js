  "devDependencies": {
    "@types/jest": "^28.1.7",
    "jest": "^28.1.3",
    "rome": "12.0.0",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@noble/secp256k1": "^1.7.1",
